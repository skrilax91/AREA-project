<div class="content-wrapper">
    <section class="content-header">
        <h1>
            Erreur
        </h1>
        <ol class="breadcrumb">
            <li><a href="/"><i class="fa fa-dashboard"></i> Home</a></li>
            <li class="active">Erreur</li>
        </ol>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-md-12">
                <div class="box">
                    <div class="box-header with-border">
                        <div class="box-tools pull-right">
                        <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
                        </div>
                        <h3 class="box-title">Erreur <%= locals.error.status %></h3>
                    </div>

                    <div class="box-body">
                        <p><%= locals.error.msg || "Une erreur c'est produite, merci de nous contacter dès que possible." %></p>
                        <a href="/" class="btn btn-primary">Revenir à l'accueil</a>          
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>
